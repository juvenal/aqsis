Import('env')
jpg2tifenv = env.Copy()
jpg2tif_sources=Split("""
	jpg2tif.c""")

# Set any platform specific options for this target
jpg2tifenv.UseTargetOptions('plugin')
jpg2tifenv.UseTargetOptions('texture_plugin')
jpg2tifenv.UseTargetOptions('jpg2tif')

jpg2tif = jpg2tifenv.SharedLibrary('jpg2tif', jpg2tif_sources, LIBS=['common', '$tiff_lib', '$z_lib', '$jpeg_lib'])

jpg2tifenv.Install('$BINDIR', jpg2tif)

env.Distribute('texturing/plugins/jpg2tif', jpg2tif_sources)
env.Distribute('texturing/plugins/jpg2tif', 'SConscript')
