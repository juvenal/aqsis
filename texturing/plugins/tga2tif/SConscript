Import('env')
tga2tifenv = env.Copy()
tga2tif_sources=Split("""
	tga2tif.c""")

# Set any platform specific options for this target
tga2tifenv.UseTargetOptions('plugin')
tga2tifenv.UseTargetOptions('texture_plugin')
tga2tifenv.UseTargetOptions('tga2tif')

tga2tif = tga2tifenv.SharedLibrary('tga2tif', tga2tif_sources, LIBS=['$tiff_lib', '$z_lib', 'jpg2tif', 'common'])

tga2tifenv.Install('$SHAREDLIBDIR', tga2tif)

env.Distribute('texturing/plugins/tga2tif', tga2tif_sources)
env.Distribute('texturing/plugins/tga2tif', 'SConscript')
