Import('env')

tinyxml_sources = Split("""
	tinystr.cpp
	tinyxml.cpp
	tinyxmlerror.cpp
	tinyxmlparser.cpp""")

tinyxml_headers = Split("""
	tinyxml.h
	tinystr.h""")


tinyxmlenv = env.Copy()

# Set any platform specific options for this target
tinyxmlenv.UseTargetOptions('tinyxml')

tinyxml = tinyxmlenv.Library('tinyxml', tinyxml_sources)
tinyxmlenv.Install('$STATICLIBDIR', tinyxml)

env.Distribute('thirdparty/tinyxml', tinyxml_sources)
env.Distribute('thirdparty/tinyxml', tinyxml_headers)
env.Distribute('thirdparty/tinyxml', 'SConscript')

# For politeness
env.Distribute('thirdparty/tinyxml', 'readme.txt')
env.Distribute('thirdparty/tinyxml', 'changes.txt')

