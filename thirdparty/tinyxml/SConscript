Import('env')

tinyxml_sources = Split("""
	tinystr.cpp
	tinyxml.cpp
	tinyxmlerror.cpp
	tinyxmlparser.cpp""")

tinyxml_headers = Split("""
	tinyxml.h
	tinystr.h""")


tinyxmlenv = env.Copy()
tinyxmlenv.AppendUnique(CPPDEFINES=['TIXML_USE_STL'])

# Set any platform specific options for this target
tinyxmlenv.UseTargetOptions('tinyxml')

tinyxml = tinyxmlenv.Library('tinyxml', tinyxml_sources)
tinyxmlenv.Install('$STATICLIBDIR', tinyxml)

env.Distribute(tinyxml_sources)
env.Distribute(tinyxml_headers)
env.Distribute('SConscript')

# For politeness
env.Distribute('readme.txt')
env.Distribute('changes.txt')

