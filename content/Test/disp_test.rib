version 3.03
Display "disp_test.tif" "file" "rgba"
Format 200 150 1
ShadingRate 2

Option "searchpath" "shader" ["./:&"]

Projection "perspective" "fov" 45
Translate 0 0 6
Rotate -20 1 0 0

Option "limits" "eyesplits" [3]
Sides 2

WorldBegin
      
  LightSource "ambientlight" 0 "intensity" [0.1]
  LightSource "distantlight" 3 "intensity" [0.5] "lightcolor" [1 1 1] "from" [-2 4 -2] "to" [0 0 0]
  LightSource "distantlight" 4 "intensity" [0.7] "lightcolor" [1 1 1] "from" [1 2 -2] "to" [0 0 0]

  Color [1 0 0]
  Attribute "displacementbound" "sphere" [0.2]
  Declare "brickwidth" "uniform float"
  Declare "brickheight" "uniform float"
  Declare "groovedepth" "uniform float"
  Declare "mortarthickness" "uniform float"
  Displacement "brickbump" "brickwidth" [0.2] "brickheight" [0.08] "groovedepth" [0.05] "mortarthickness" [0.02]
  Surface "plastic"

  TransformBegin
    Rotate 90 1 0 0
    Scale 2 2 2
    Sphere 1 -1 1 360
  TransformEnd

WorldEnd

