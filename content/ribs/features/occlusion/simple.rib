Display "simple.tif" "file" "rgba" "string compression" "lzw"
Display "+simple.tif" "framebuffer" "rgb"

Projection "perspective"  "fov" [38]
Format 320 240 1

Translate 0 -2 10
Rotate -110 1 0 0

Option "limits" "texturememory" [300000]
Option "statistics" "endofframe" [3]

WorldBegin
  LightSource "envlight" 3
   "string filename" "occlmap.sm" "float intensity" [ 0.9 ] "float samples" [ 32 ] "float blur" [ 0.025 ]

  Surface "matte"
  ReadArchive "world.rib"

WorldEnd
