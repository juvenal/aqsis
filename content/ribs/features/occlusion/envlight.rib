Display "envlight.tif" "file" "rgb"
Display "+envlight.tif" "framebuffer" "rgb"

Projection "perspective"  "fov" [38]
Format 320 240 1

Translate 0 -2 10
Rotate -110 1 0 0

Option "limits" "texturememory" [300000]
Option "statistics" "endofframe" [3]

WorldBegin
  LightSource "envlight" 3
   "string filename" "occlmap.sm"

  Surface "matte"
  ReadArchive "world.rib"

WorldEnd
