Orientation "lh"
Format 320 240 1
PixelSamples 2 2
PixelFilter "gaussian" 2 2
ShadingRate 1.0
Option "statistics" "endofframe" [1]
Option "searchpath" "shader" ["../shaders:&"] 
FrameBegin 0
Display "csg_test2.tif" "file" "rgba" "string compression" "deflate"
#Display "+csg_test2.tif" "framebuffer" "rgba"
Sides 1

# Camera name: "Kamera01"
Projection "perspective" "fov" [36.0]
Translate 0 0 3
Rotate -35 1 0 0
Rotate 35 0 1 0
Clipping 1 100

WorldBegin
# Default-Surface
Surface "matte"

TransformBegin
Translate 0 30 -30
LightSource "pointlight" 2 "intensity" [700]
TransformEnd

TransformBegin
Translate 30 30 0
LightSource "pointlight" 3 "intensity" [700]
TransformEnd

TransformBegin
Translate 0 0 0
LightSource "pointlight" 4 "intensity" [30]
TransformEnd

TransformBegin
	Color 1 1 1
	Translate 0 -8.1 0
	Scale 10 1 10
	Polygon "P" [-10 0 -10  -10 0  10   10 0  10   10 0  -10]
TransformEnd


SolidBegin "intersection"
	SolidBegin "primitive"
		Color 1 1 1
		Polygon "P" [-8 -8 -8   -8  8 -8   8  8 -8   8 -8 -8]  
		Polygon "P" [-8 -8  8    8 -8  8   8  8  8  -8  8  8]  
		Polygon "P" [-8 -8 -8   -8 -8  8  -8  8  8  -8  8 -8]  
		Polygon "P" [ 8 -8 -8    8  8 -8   8  8  8   8 -8  8]  
		Polygon "P" [-8  8 -8   -8  8  8   8  8  8   8  8 -8]  
		Polygon "P" [-8 -8 -8    8 -8 -8   8 -8  8  -8 -8  8]  
	SolidEnd
	SolidBegin "union"
		SolidBegin "primitive"
			AttributeBegin
			Surface "plastic" "float Ks" [0.8]
			Color 0 1 0
			Sphere 10.0 -10.0 10.0 360
			AttributeEnd
		SolidEnd

		Rotate 170 0 1 0
		Rotate -35 1 0 0
		Rotate 35 0 0 1
		SolidBegin "primitive"
			AttributeBegin
			Color 1 0 0
			Cylinder 5.0 -20 20 360
			Disk -20 5 360
			Disk 20 5 360
			AttributeEnd
		SolidEnd

	SolidEnd
SolidEnd

WorldEnd
FrameEnd

